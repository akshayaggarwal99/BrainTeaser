<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_prepare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Prepare For Exams"
            android:textColor="#BDBDBD"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_aptitude"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_below="@id/textview_prepare"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:onClick="cardClickHandler"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:background="@color/card_one">

                    <ImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp16"
                        android:src="@drawable/aptitude" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/progress_bar_aptitude"
                        android:layout_marginLeft="@dimen/dp4"
                        android:text="Completed: 25%"
                        android:textColor="#FFF"
                        android:textSize="10dp" />

                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/progress_bar_aptitude"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="4dp"
                        android:progress="25"
                        android:progressDrawable="@drawable/custom_progress_bar_horizontal" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Aptitude Questions"
                    android:textColor="@color/card_one"
                    android:textSize="16sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_logical"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_alignLeft="@+id/card_riddle"
            android:layout_alignStart="@+id/card_riddle"
            android:layout_alignTop="@+id/card_aptitude"
            android:onClick="cardClickHandler"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:background="@color/card_two">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp16"
                        android:src="@drawable/lightbulb" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/progress_bar_logical"
                        android:layout_marginLeft="@dimen/dp4"
                        android:text="Completed: 25%"
                        android:textColor="#FFF"
                        android:textSize="10dp" />

                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/progress_bar_logical"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="4dp"
                        android:progress="25"
                        android:progressDrawable="@drawable/custom_progress_bar_horizontal" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Logical Reasoning"
                    android:textColor="@color/card_two"
                    android:textSize="16sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textview_crazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_aptitude"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="For the crazy ones"
            android:textColor="#BDBDBD"
            android:textSize="18sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_puzzle"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_below="@id/textview_crazy"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:onClick="cardClickHandler"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:background="#6E8898">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp16"
                        android:src="@drawable/puzzles" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/pb_aptitude"
                        android:layout_marginLeft="@dimen/dp4"
                        android:text="Completed: 25%"
                        android:textColor="#FFF"
                        android:textSize="10dp" />

                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/pb_aptitude"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="4dp"
                        android:progress="25"
                        android:progressDrawable="@drawable/custom_progress_bar_horizontal" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Puzzle Questions"
                    android:textColor="#6E8898"
                    android:textSize="16sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_riddle"
            android:layout_width="150dp"
            android:layout_height="210dp"
            android:layout_alignTop="@+id/card_puzzle"
            android:layout_toEndOf="@+id/card_puzzle"
            android:layout_toRightOf="@+id/card_puzzle"
            android:onClick="cardClickHandler"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="210dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:background="#85756E">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp16"
                        android:src="@drawable/riddle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/progress_bar_riddle"
                        android:layout_marginLeft="@dimen/dp4"
                        android:text="Completed: 25%"
                        android:textColor="#FFF"
                        android:textSize="10dp" />

                    <android.support.v4.widget.ContentLoadingProgressBar
                        android:id="@+id/progress_bar_riddle"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="4dp"
                        android:progress="25"
                        android:progressDrawable="@drawable/custom_progress_bar_horizontal" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Riddle Questions"
                    android:textColor="#85756E"
                    android:textSize="16sp" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>