<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/dp4">


        <ImageView
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_margin="@dimen/dp16"
            android:layout_gravity="center"
            android:src="@drawable/mind" />


    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:text="About us"
        android:textColor="#708090"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:textColor="#708090"

        android:text="OpenSoftLabs is an educational application venture whcih beleives in making world more open to education.Brain Teaser is made for those who challenge things."
        android:textSize="16sp"

        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp8"
        android:textColor="#708090"

        android:text="Contact us"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#708090"

        android:layout_margin="@dimen/dp8"
        android:text="Mail us at opensoftlabs@gmail.com"
        android:textSize="16sp"

        ></TextView>

</LinearLayout>