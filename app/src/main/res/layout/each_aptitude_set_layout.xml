<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:layout_margin="2dp"
    card:cardElevation="2dp"
    card:cardCornerRadius="@dimen/dp4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <ImageView
            android:id="@+id/iv_setLogo"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:src="@drawable/study" />

        <View
            android:layout_width="1dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_setLogo"
            android:background="@color/card_one"></View>

        <TextView
            android:id="@+id/tv_setNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_setLogo"
            android:fontFamily="sans-serif"
            android:text="Set 1"
            android:textColor="@color/card_one"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_set_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_setLogo"
            android:layout_alignLeft="@+id/tv_setNo"
            android:layout_alignStart="@+id/tv_setNo"
            android:fontFamily="sans-serif"
            android:text="You have Completed !"
            android:textColor="@color/card_one"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_que_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif"
            android:text="Total Questions - 10"
            android:textColor="@color/card_one"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>